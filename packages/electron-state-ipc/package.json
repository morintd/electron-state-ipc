{
  "name": "electron-state-ipc",
  "version": "1.0.0",
  "description": "Easily synchronize state between main process and renderer in Electron, using your favorite UI framework (React, Vue, Angular)",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/morintd/electron-state-ipc",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "yarn build:main && yarn build:module && yarn build:react",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:react": "tsc -p tsconfig.react.json",
    "tsc": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "clear": "rimraf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "28.1.4",
    "@types/node": "16.11.42",
    "@types/react": "18.0.14",
    "@typescript-eslint/eslint-plugin": "5.30.3",
    "@typescript-eslint/parser": "5.30.3",
    "cspell": "6.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.2.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-testing-library": "5.5.1",
    "husky": "8.0.1",
    "jest": "28.1.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "ts-jest": "28.0.5",
    "typescript": "4.7.4"
  },
  "files": [
    "build/main",
    "build/module",
    "react",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "electron": "19.0.7",
    "react": "18.2.0"
  }
}
